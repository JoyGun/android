<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunyard.lite.ocr.MainActivity">

    <Button
        android:id="@+id/dealImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正面识别" />

    <Button
        android:id="@+id/recImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="背面识别" />
    <!-- 导入图片 -->
    <Button
        android:id="@+id/picFrontRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导入正面图像" />
    <Button
        android:id="@+id/picBackRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导入背面图像" />
    <!-- 放中间过程的图片-->
    <ImageView
        android:id="@+id/blurImg"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="000dp" />
    <ImageView
        android:id="@+id/grayImg"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ImageView
        android:id="@+id/cannyImg"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/textOCRView"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="18dp"
        android:clickable="false"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/dilate1Img"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/erodeImg"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/dilate2Img"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

